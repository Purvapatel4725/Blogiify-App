<% include partials/header.ejs %>
<% include partials/main_nav.ejs %>

<!-- Improved Homepage with Bootstrap for better design and mobile compatibility -->
<div class="container mt-5 mb-5">
  <!-- Header section -->
  <div class="row">
    <div class="col-12 text-center">
      <h1 class="display-4 fw-bold"><i class="fas fa-quote-left fa-shake"></i> Blogiify <i class="fas fa-quote-right fa-shake"></i></h1>
      <!-- Reduced margin for the lead paragraph -->
      <div class="lead mb-3">
        <p class="lead-text">
          <span id="stopThinking">Stop Thinking...</span><span id="startWriting" style="font-weight: bold; display: inline;"></span>
        </p>
      </div>
    </div>
  </div>
  

  <!-- Main section -->
  <section class="mt-3 mb-5">
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <div class="card shadow p-4">
          <!-- First article -->
          <article>
            <h2>Welcome to Blogiify!</h2>
            <img src="/assets/images/Logo.png" alt="Blogify Logo" class="img-fluid mb-4" style="max-width: 200px;">
            <p>Start sharing your thoughts and experiences with the world.<br>Blogiify provides you with a user-friendly platform to create and publish your thoughts.</p>
          </article>

          <!-- Second article with a link to start blogging -->
          <article>
            <a href="/blog" class="btn btn-primary mb-3">Start Blogging</a>
          </article>
        </div>
      </div>
    </div>
  </section>
</div>



